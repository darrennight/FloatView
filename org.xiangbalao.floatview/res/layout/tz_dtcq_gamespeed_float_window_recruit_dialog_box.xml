<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:paddingBottom="30dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="25dip"
            android:background="@drawable/tz_dtcq_gamespeed_float_window_dialog_box_boder"
            android:orientation="vertical" >

            <WebView
                android:id="@+id/tz_dtcq_gamespeed_float_window_dialog_box_close_webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dip"
                 android:scrollbars="none" 
                android:paddingTop="10dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:src="@drawable/tz_gamedashi_dtcq_floatview_defalt" />

                    <TextView
                        android:id="@+id/tz_dtcq_gamespeed_float_window_dialog_box_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游戏大师"
                        android:textColor="#E37110"
                        android:textSize="14dip" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tz_dtcq_gamespeed_float_window_dialog_box_http"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="www.gamedashi.com"
                    android:textColor="#E37110" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tz_dtcq_gamespeed_float_window_dialog_box_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="招聘安卓工稆师，和我们一起创造有趣的产品！"
                        android:textColor="#ffffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="#88000000" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="#88ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:src="@drawable/tz_gamedashi_dtcq_floatview_defalt" />

                    <TextView
                        android:id="@+id/tz_dtcq_gamespeed_float_window_dialog_box_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="email"
                        android:text="简历发至：zhaopin@gamedashi.com"
                        android:textColor="#BEBEBC"
                        android:textSize="14dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:src="@drawable/tz_gamedashi_dtcq_floatview_defalt" />

                    <TextView
                        android:id="@+id/tz_dtcq_gamespeed_float_window_dialog_box_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商务合作：QQ 1316024054"
                        android:textColor="#BEBEBC"
                        android:textSize="14dip" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/tz_dtcq_gamespeed_float_window_dialog_box_close_imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/tz_dtcq_gamespeed_float_window_dialog_box_close_image" />
    </RelativeLayout>

</FrameLayout>