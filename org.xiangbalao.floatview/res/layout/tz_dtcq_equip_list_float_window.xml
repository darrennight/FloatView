<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dip"
    android:layout_height="300dip"
    android:layout_gravity="center"
    android:background="#FEC923"
    android:orientation="vertical"
    android:padding="1.5dip" >

    <RelativeLayout
        android:id="@+id/big_window_layout_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#160900"
        android:gravity="center" >

        <ListView
            android:id="@+id/tz_dtcq_equip_list_float_window_listview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dip" >
        </ListView>

        <ImageView
            android:id="@+id/tz_dtcq_equip_list_float_window_listview_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/tz_dtcq_float_window_close1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#FEC923"
            android:padding="5dip" >

            <TextView
                android:id="@+id/imageView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/tz_dtcq_float_window_butom_boder"
                android:gravity="center"
                android:padding="3dip"
                android:text="进阶装备"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>