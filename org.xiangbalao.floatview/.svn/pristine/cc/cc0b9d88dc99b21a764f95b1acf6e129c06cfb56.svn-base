<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="10dip"
    android:background="#FEC923"
    android:orientation="vertical"
    android:padding="1.5dip" >

    <RelativeLayout
        android:id="@+id/big_window_layout_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#160900"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#1A1B1B"
                android:orientation="horizontal"
                android:paddingLeft="5dip" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:padding="10dip"
                    android:text="满附魔属性加成"
                    android:textColor="#FDE9B7"
                    android:textSize="23dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_gravity="center_horizontal"
                android:layout_weight="6"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="魔法抗性+656\n生命回复+9956" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:padding="10dip"
                android:layout_gravity="center_horizontal"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                   
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无数据" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/tz_dtcq_equip_list_float_window_listview_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/tz_dtcq_float_window_close1" />
    </RelativeLayout>

</LinearLayout>